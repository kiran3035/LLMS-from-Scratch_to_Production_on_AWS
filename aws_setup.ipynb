"""
AWS SageMaker Setup Helper Script
Automates AWS infrastructure setup for the LLM project
"""

import boto3
import json
import os
from pathlib import Path

class AWSSetupHelper:
    """Helper class for AWS SageMaker setup"""
    
    def __init__(self, region='us-east-1'):
        self.region = region
        self.sagemaker = boto3.client('sagemaker', region_name=region)
        self.s3 = boto3.client('s3', region_name=region)
        self.iam = boto3.client('iam', region_name=region)
        
    def create_s3_bucket(self, bucket_name):
        """Create S3 bucket for data and models"""
        try:
            if self.region == 'us-east-1':
                self.s3.create_bucket(Bucket=bucket_name)
            else:
                self.s3.create_bucket(
                    Bucket=bucket_name,
                    CreateBucketConfiguration={'LocationConstraint': self.region}
                )
            print(f"‚úÖ Created S3 bucket: {bucket_name}")
            return True
        except self.s3.exceptions.BucketAlreadyOwnedByYou:
            print(f"‚ÑπÔ∏è  Bucket {bucket_name} already exists")
            return True
        except Exception as e:
            print(f"‚ùå Error creating bucket: {e}")
            return False
    
    def create_sagemaker_role(self, role_name='LLMSageMakerRole'):
        """Create IAM role for SageMaker"""
        trust_policy = {
            "Version": "2012-10-17",
            "Statement": [
                {
                    "Effect": "Allow",
                    "Principal": {"Service": "sagemaker.amazonaws.com"},
                    "Action": "sts:AssumeRole"
                }
            ]
        }
        
        try:
            # Create role
            response = self.iam.create_role(
                RoleName=role_name,
                AssumeRolePolicyDocument=json.dumps(trust_policy),
                Description='Role for LLM training on SageMaker'
            )
            
            # Attach policies
            self.iam.attach_role_policy(
                RoleName=role_name,
                PolicyArn='arn:aws:iam::aws:policy/AmazonSageMakerFullAccess'
            )
            self.iam.attach_role_policy(
                RoleName=role_name,
                PolicyArn='arn:aws:iam::aws:policy/AmazonS3FullAccess'
            )
            
            print(f"‚úÖ Created SageMaker role: {role_name}")
            return response['Role']['Arn']
        except self.iam.exceptions.EntityAlreadyExistsException:
            print(f"‚ÑπÔ∏è  Role {role_name} already exists")
            response = self.iam.get_role(RoleName=role_name)
            return response['Role']['Arn']
        except Exception as e:
            print(f"‚ùå Error creating role: {e}")
            return None
    
    def create_notebook_instance(self, instance_name='llm-from-scratch',
                                 instance_type='ml.t3.medium',
                                 role_arn=None):
        """Create SageMaker notebook instance"""
        if role_arn is None:
            print("‚ùå Role ARN required. Create role first.")
            return False
        
        try:
            response = self.sagemaker.create_notebook_instance(
                NotebookInstanceName=instance_name,
                InstanceType=instance_type,
                RoleArn=role_arn,
                VolumeSizeInGB=20,
                DefaultCodeRepository='https://github.com/yourusername/llm-from-scratch'
            )
            print(f"‚úÖ Creating notebook instance: {instance_name}")
            print(f"   Instance type: {instance_type}")
            print(f"   Status: Creating (will take 3-5 minutes)")
            return True
        except self.sagemaker.exceptions.ResourceInUse:
            print(f"‚ÑπÔ∏è  Notebook instance {instance_name} already exists")
            return True
        except Exception as e:
            print(f"‚ùå Error creating notebook instance: {e}")
            return False
    
    def upload_data_to_s3(self, local_path, bucket_name, s3_prefix='data/'):
        """Upload training data to S3"""
        try:
            if os.path.isfile(local_path):
                files = [local_path]
            else:
                files = list(Path(local_path).rglob('*.txt'))
            
            for file_path in files:
                key = s3_prefix + os.path.basename(str(file_path))
                self.s3.upload_file(str(file_path), bucket_name, key)
                print(f"‚úÖ Uploaded: {file_path} ‚Üí s3://{bucket_name}/{key}")
            
            return True
        except Exception as e:
            print(f"‚ùå Error uploading data: {e}")
            return False
    
    def estimate_costs(self, training_hours=20, storage_gb=10):
        """Estimate AWS costs for the project"""
        # Pricing (as of Dec 2024)
        prices = {
            'ml.t3.medium': 0.05,       # Development
            'ml.g4dn.xlarge': 0.526,    # Training on-demand
            'ml.g4dn.xlarge_spot': 0.18, # Training spot (65% off)
            's3_storage': 0.023,        # per GB per month
        }
        
        dev_cost = 10 * prices['ml.t3.medium']  # 10 hours development
        train_cost = training_hours * prices['ml.g4dn.xlarge_spot']
        storage_cost = storage_gb * prices['s3_storage']
        
        total = dev_cost + train_cost + storage_cost
        
        print("="*60)
        print("AWS COST ESTIMATE")
        print("="*60)
        print(f"Development (ml.t3.medium, 10h):    ${dev_cost:.2f}")
        print(f"Training (ml.g4dn.xlarge spot, {training_hours}h): ${train_cost:.2f}")
        print(f"Storage (S3, {storage_gb}GB):              ${storage_cost:.2f}")
        print("-"*60)
        print(f"TOTAL ESTIMATED COST:               ${total:.2f}")
        print("="*60)
        
        # Compare with on-demand
        on_demand = training_hours * prices['ml.g4dn.xlarge']
        savings = on_demand - train_cost
        print(f"\nüí∞ Savings with spot instances: ${savings:.2f} ({(savings/on_demand)*100:.0f}%)")
        
        return total
    
    def get_setup_status(self):
        """Check current AWS setup status"""
        print("="*60)
        print("AWS SETUP STATUS")
        print("="*60)
        
        # Check credentials
        try:
            sts = boto3.client('sts')
            account_id = sts.get_caller_identity()['Account']
            print(f"‚úÖ AWS Credentials: Configured")
            print(f"   Account ID: {account_id}")
            print(f"   Region: {self.region}")
        except Exception as e:
            print(f"‚ùå AWS Credentials: Not configured")
            print(f"   Run: aws configure")
            return False
        
        # Check S3 buckets
        try:
            buckets = self.s3.list_buckets()
            llm_buckets = [b['Name'] for b in buckets['Buckets'] if 'llm' in b['Name'].lower()]
            if llm_buckets:
                print(f"‚úÖ S3 Buckets: {len(llm_buckets)} found")
                for bucket in llm_buckets:
                    print(f"   - {bucket}")
            else:
                print(f"‚ÑπÔ∏è  S3 Buckets: None with 'llm' in name")
        except Exception as e:
            print(f"‚ö†Ô∏è  Could not list S3 buckets")
        
        # Check SageMaker notebook instances
        try:
            notebooks = self.sagemaker.list_notebook_instances()
            if notebooks['NotebookInstances']:
                print(f"‚úÖ SageMaker Notebooks: {len(notebooks['NotebookInstances'])} found")
                for nb in notebooks['NotebookInstances']:
                    status = nb['NotebookInstanceStatus']
                    print(f"   - {nb['NotebookInstanceName']}: {status}")
            else:
                print(f"‚ÑπÔ∏è  SageMaker Notebooks: None found")
        except Exception as e:
            print(f"‚ö†Ô∏è  Could not list SageMaker notebooks")
        
        print("="*60)
        return True

def main():
    """Interactive setup wizard"""
    print("="*60)
    print("AWS SAGEMAKER SETUP WIZARD")
    print("LLM from Scratch Portfolio Project")
    print("="*60)
    
    # Initialize helper
    region = input("\nEnter AWS region (default: us-east-1): ").strip() or 'us-east-1'
    helper = AWSSetupHelper(region)
    
    # Check status
    print("\nüìä Checking current setup...")
    helper.get_setup_status()
    
    # Menu
    while True:
        print("\n" + "="*60)
        print("SETUP OPTIONS")
        print("="*60)
        print("1. Create S3 bucket")
        print("2. Create SageMaker IAM role")
        print("3. Create notebook instance")
        print("4. Upload training data")
        print("5. Estimate costs")
        print("6. Check setup status")
        print("7. Complete setup (all steps)")
        print("0. Exit")
        print("="*60)
        
        choice = input("\nEnter choice (0-7): ").strip()
        
        if choice == '1':
            bucket_name = input("Enter bucket name (e.g., llm-training-data-123): ").strip()
            helper.create_s3_bucket(bucket_name)
        
        elif choice == '2':
            role_name = input("Enter role name (default: LLMSageMakerRole): ").strip() or 'LLMSageMakerRole'
            role_arn = helper.create_sagemaker_role(role_name)
            if role_arn:
                print(f"\nüìã Role ARN: {role_arn}")
                print("   (Save this for notebook creation)")
        
        elif choice == '3':
            instance_name = input("Enter instance name (default: llm-from-scratch): ").strip() or 'llm-from-scratch'
            instance_type = input("Enter instance type (default: ml.t3.medium): ").strip() or 'ml.t3.medium'
            role_arn = input("Enter role ARN: ").strip()
            helper.create_notebook_instance(instance_name, instance_type, role_arn)
        
        elif choice == '4':
            bucket_name = input("Enter bucket name: ").strip()
            local_path = input("Enter local data path: ").strip()
            helper.upload_data_to_s3(local_path, bucket_name)
        
        elif choice == '5':
            training_hours = int(input("Enter training hours (default: 20): ").strip() or '20')
            storage_gb = int(input("Enter storage GB (default: 10): ").strip() or '10')
            helper.estimate_costs(training_hours, storage_gb)
        
        elif choice == '6':
            helper.get_setup_status()
        
        elif choice == '7':
            print("\nüöÄ Starting complete setup...")
            
            # Step 1: S3 Bucket
            bucket_name = input("\n1. Enter bucket name (e.g., llm-training-data-123): ").strip()
            helper.create_s3_bucket(bucket_name)
            
            # Step 2: IAM Role
            print("\n2. Creating SageMaker IAM role...")
            role_arn = helper.create_sagemaker_role()
            
            # Step 3: Notebook Instance
            if role_arn:
                print("\n3. Creating notebook instance...")
                helper.create_notebook_instance(role_arn=role_arn)
            
            # Step 4: Upload data (optional)
            upload = input("\n4. Upload data? (y/n): ").strip().lower()
            if upload == 'y':
                local_path = input("   Enter local data path: ").strip()
                helper.upload_data_to_s3(local_path, bucket_name)
            
            print("\n‚úÖ Setup complete!")
            print("\nüìã Next steps:")
            print("   1. Wait 3-5 minutes for notebook instance")
            print("   2. Check AWS Console ‚Üí SageMaker ‚Üí Notebook instances")
            print("   3. Click 'Open JupyterLab' when ready")
            print("   4. Clone your repository")
            print("   5. Start with 01_LLM_Fundamentals.ipynb")
        
        elif choice == '0':
            print("\nüëã Goodbye!")
            break
        
        else:
            print("\n‚ùå Invalid choice. Try again.")

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        print("\n\nüëã Setup interrupted. Goodbye!")
    except Exception as e:
        print(f"\n‚ùå Error: {e}")
        print("   Make sure AWS credentials are configured: aws configure")

